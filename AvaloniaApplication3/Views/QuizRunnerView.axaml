<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaApplication3.ViewModels"
             x:Class="AvaloniaApplication3.Views.QuizRunnerView"
             x:DataType="vm:QuizRunnerViewModel"
             x:Name="Root"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450">

	<StackPanel Margin="20" Spacing="12">

		<!-- Question text -->
		<TextBlock Text="{Binding CurrentQuestion.Text}"
                   FontSize="18"
                   FontWeight="Bold"
                   TextWrapping="Wrap" />

		<!-- Options -->
		<!-- SINGLE CHOICE -->
		<ItemsControl ItemsSource="{Binding CurrentQuestion.Answers}"
					  IsVisible="{Binding IsSingleChoice}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<RadioButton Content="{Binding Text}"
								 GroupName="SingleChoiceGroup"
								 IsChecked="{Binding IsSelected, Mode=TwoWay}" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<!-- MULTIPLE CHOICE -->
		<ItemsControl ItemsSource="{Binding CurrentQuestion.Answers}"
					  IsVisible="{Binding IsMultipleChoice}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<CheckBox Content="{Binding Text}"
							  IsChecked="{Binding IsSelected, Mode=TwoWay}" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<!-- TRUE/FALSE -->
		<ItemsControl ItemsSource="{Binding CurrentQuestion.Answers}"
					  IsVisible="{Binding IsTrueFalse}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<RadioButton Content="{Binding Text}"
								 GroupName="TrueFalseGroup"
								 IsChecked="{Binding IsSelected, Mode=TwoWay}" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>



		<!-- Explanation -->
		<TextBlock Text="{Binding FeedbackText}"
                   Foreground="{Binding LastAnswerCorrect, Converter={StaticResource AnswerFeedbackConverter}}"
                   TextWrapping="Wrap"
                   IsVisible="{Binding ShowFeedback}" />

		<!-- Buttons -->
		<StackPanel Orientation="Horizontal" Spacing="8">
			<Button Content="Submit" Command="{Binding SubmitCommand}" />
			<Button Content="Next Question" Command="{Binding NextCommand}" />
		</StackPanel>

	</StackPanel>
</UserControl>
