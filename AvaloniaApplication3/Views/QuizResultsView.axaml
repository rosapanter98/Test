<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaApplication3.ViewModels"
             x:Class="AvaloniaApplication3.Views.QuizResultsView"
             x:DataType="vm:QuizResultsViewModel"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450">

	<StackPanel Margin="20" Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Text="Quiz Completed!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" />
		<TextBlock Text="{Binding QuizTitle}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
		<TextBlock Text="{Binding ScoreMessage}" FontSize="16" HorizontalAlignment="Center" />

		<Button Content="Back to Quiz Menu"
                Command="{Binding ReturnToMenuCommand}"
                HorizontalAlignment="Center"
                Width="200" />
	</StackPanel>
</UserControl>
